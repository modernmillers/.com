meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
meta(charset='utf-8')
meta(name='viewport', content='width=device-width')
meta(name='description', content=blog.description)

<!-- SEO -->
meta(name="robots", content="#{seo.robots}")
link(rel="canonical", href="#{seo.canonical}")
link(rel='author', href='https://twitter.com/modernmillers')

<!-- Open Graph / Twitter / Schema.org -->
meta(property="og:type" content="website")
meta(property="og:url" content="#{seo.canonical}")
meta(property="twitter:url" content="#{seo.canonical}")
meta(property="twitter:card" content="summary")

if seo.ogp.twitterHandle
    meta(property="twitter:site" content="#{seo.ogp.twitterHandle}")
    meta(property="twitter:creator" content="#{seo.ogp.twitterHandle}")

if seo.ogp.title
    meta(itemprop="name" content="#{seo.ogp.title}")
    meta(property="twitter:title" content="#{seo.ogp.title}")
    meta(property="og:title" content="#{seo.ogp.title}")
else
    meta(itemprop="name" content="#{blog.title}")
    meta(property="og:title" content="#{blog.title}")
    meta(property="twitter:title" content="#{blog.title}")

if snippet
    meta(itemprop="description" content="#{snippet}")
    meta(property="og:description" content="#{snippet}")
    meta(property="twitter:description" content="#{snippet}")
else
    meta(itemprop="description" content="#{blog.description}")
    meta(property="og:description" content="#{blog.description}")
    meta(property="twitter:description" content="#{blog.description}")

if seo.ogp.image
    meta(itemprop="image" content="#{seo.ogp.image}")
    meta(property="og:image" content="#{seo.ogp.image}")
    meta(property="twitter:image" content="#{seo.ogp.image}")
else
    meta(itemprop="image" content="#{seo.ogp.image}")
    meta(property="og:image" content="#{seo.ogp.defaultImage}")
    meta(property="twitter:image" content="#{seo.ogp.defaultImage}")

title
    block title
        = blog.title

<!-- RSS -->
link(rel='alternate', href='/feed.xml', type='application/rss+xml', title=blog.description)

<!-- Stylesheets/Fonts -->
include ./styles.jade